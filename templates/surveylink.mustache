{{!
    @template block_surveylinks/surveylink

    The view for the survey links block.

    Example context (json):
    {
        "surveylink" : {
            "surveyurl": "https://www.example.com",
            "surveyid": "test123",
            "surveyname": "Survey Name",
            "logosrc": "/pluginfile.php/foo/bar",
            "linktest": "<p>test</p>",
            "extratext": "<p>extra test</p>"
        }
    }
}}

{{#surveylink}}
    <a class="block-btn text-center d-block" target="_blank" href="{{surveyurl}}" data-surveyid="{{surveyid}}" data-surveyname="{{surveyname}}">
        <img class="img-responsive" alt="survey-logo" src="{{logosrc}}">
        {{{linktext}}}
    </a>
    <p class="text-center">{{{extratext}}}</p>
{{/surveylink}}
